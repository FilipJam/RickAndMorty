            <div class="row">
              <% for(let i = 0; i < charList.length; i++) { %>
                <div class="col-6 col-md-4 col-lg-3 col-xl-2 px-0">
                  <div class="card">
                    <img class="card-img-top card-image" src="<%= charList[i].image %>" alt="Card image cap">
                    <div class="card-body card-body">
                      <h5 class="card-title"><%= charList[i].name %></h5>
                      <div class="card-text">
                        Status: 
                        <% var statusColor = ""; %>
                        <% switch(charList[i].status) {
                           case "Alive": statusColor = "status-alive"; break;
                           case "Dead": statusColor = "status-dead";  break;
                           default: statusColor = "status-unknown"; break; } %>
                        <%= charList[i].status %>
                        <div class="circle <%= statusColor %>"></div>
                        </div>
                      <p class="card-text">Species: <%= charList[i].species %></p>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
            
